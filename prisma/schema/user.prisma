model User {
  id                String         @id @default(cuid())
  name              String
  email             String         @unique
  emailVerified     DateTime?
  password          String?
  image             String?
  role              Role           @default(OWNER)
  phone             String?
  address           String?
  accounts          Account[]
  sessions          Session[]
  company           Company?
  bookkeeper        Bookkeeper?
  bookAccounts      BookAccount[]
  journalEntries    JournalEntry[]
  journalEntryLines EntryLine[]
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  deactivated       Boolean?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role         Role     @default(OWNER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

enum Role {
  BOOKKEEPER
  OWNER
  ADMIN
}
